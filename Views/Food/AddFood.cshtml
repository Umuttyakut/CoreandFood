@model CoreandFood.Data.Models.urunekle
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food Update</h2>
<br />
<form class="form-group" action="AddFood" asp-controller="Food" method="post" enctype="multipart/form-data">
    <b>Category Name</b>
    @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})
    <br />
    <b>Price</b>
    @Html.TextBoxFor(x=>x.Price, new{@class="form-control"})
    <br />
    <b>Stock</b>
    @Html.TextBoxFor(x=>x.Stock, new{@class="form-control"})
    <br />
    <b>ImageURL</b>
    <input type="file" name="ImageURL"/>
    <br />
    <b>Category</b>
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v1,new {@class="form-control"})
    <br />
    <b>Description</b>
    @Html.TextBoxFor(x=>x.Description, new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Update</button>
</form>

