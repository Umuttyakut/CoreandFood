@model CoreandFood.Data.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FoodGet</h2>
<br />
@using (Html.BeginForm("FoodUpdate", "Food", FormMethod.Post))
{
    <b>Food ID</b>
    @Html.TextBoxFor(x=>x.FoodID, new{@class="form-control"})
    <br />
    <b>Category Name</b>
    @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})
    <br />
    <b>Price</b>
    @Html.TextBoxFor(x=>x.Price, new{@class="form-control"})
    <br />
    <b>Stock</b>
    @Html.TextBoxFor(x=>x.Stock, new{@class="form-control"})
    <br />
    <b>ImageURL</b>
    @Html.TextBoxFor(x=>x.ImageURL, new{@class="form-control"})
    <br />
    <b>Category</b>
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v1,new {@class="form-control"})
    <br />
    <b>Description</b>
    @Html.TextBoxFor(x=>x.Description, new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Update</button>
}

